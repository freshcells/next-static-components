{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/module",
    "declaration": true,
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "./src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true
  },
  "typeRoots": [],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
